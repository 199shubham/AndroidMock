<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.mock.sample.mock.data.MockListResponse" />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:cardElevation="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:background="@color/white"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtApiName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            android:text="Api Name"
            android:layout_marginTop="@dimen/_4sdp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:background="@color/white"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_reg"/>

            <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtApiCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtApiName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:ellipsize="marquee"
            android:text="Api Category"
            android:layout_marginTop="@dimen/_4sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_reg"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtApiDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtApiCategory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:ellipsize="marquee"
                android:text="Api Description"
                android:layout_marginTop="@dimen/_4sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@color/white"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_reg"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
